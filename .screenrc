escape ^Tt
hardstatus alwayslastline "[%02c] %`%-w%{=b bw}%n %t%{-}%+w"

# for display collapse
cjkwidth off

# 256 colors
defbce on
term xterm-256color
shell $SHELL
termcapinfo xterm* 'Co#256:pa#32767:AB=\E[48;5;%dm:AF=\E[38;5;%dm:'

maptimeout 0

# Correspond to scroll in gnome-terminal
termcapinfo xterm* ti@:te@

